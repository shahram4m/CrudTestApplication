@page
@model CrudTestApplication.Web.Pages.Customer.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customer.FirstName" class="control-label"></label>
                <input asp-for="Customer.FirstName" class="form-control" required
                       oninvalid="this.setCustomValidity('Fisrt Name is required field')"
                       onchange="this.setCustomValidity('')"  />
                <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.LastName" class="control-label"></label>
                <input asp-for="Customer.LastName" class="form-control" required
                       oninvalid="this.setCustomValidity('Last Name is required field')"
                       onchange="this.setCustomValidity('')" />
                <span asp-validation-for="Customer.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.DateOfBirth" class="control-label"></label>
                <input asp-for="Customer.DateOfBirth" class="form-control" type="date" />
                <span asp-validation-for="Customer.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.PhoneNumber" class="control-label"></label>
                <input asp-for="Customer.PhoneNumber" class="form-control" required
                       oninvalid="this.setCustomValidity('PhoneNumber is required field')"
                       onchange="this.setCustomValidity('')" />
                <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Email" class="control-label"></label>
                <input asp-for="Customer.Email" class="form-control" type="email" required
                       oninvalid="this.setCustomValidity('Email is required field')"
                       onchange="this.setCustomValidity('')" />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.BankAccountNumber" class="control-label"></label>
                <input asp-for="Customer.BankAccountNumber" class="form-control" required
                       oninvalid="this.setCustomValidity('BankAccountNumber is required field')"
                       onchange="this.setCustomValidity('')" />
                <span asp-validation-for="Customer.BankAccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

